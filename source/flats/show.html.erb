---
title: James Aung - Middleman - Flat <%= owner %>
---
<% flat = data.flats[owner] %>
<div id="show">

  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>');"></div>

  <div class="wrapper" id="main-content">
    <div class="container">
      <div class="row">
        <div class="col-xs-21 col-sm-6">
          <div class="flat">
            <div class="owner">
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle" %>

              <p><%= flat.name %></p>
            </div>
            <div class="flat-info">
              <h1><%= flat.description %></h1>

              <p><%= flat.city_name %></p>

              <% flat.rating.times do %>
              <span><i class="fa fa-star"></i></span>
              <% end %>
            </div>
          </div>

        </div>



        <div class="col-xs-12 col-sm-6">
          <form action="#" >
            <h4>Book this flat</h3>
            <div class="form-group">
              <div class="row">
                <div class="col-xs-6">
                  <input type="text" class="form-control" placeholder="checkin" id="checkin">
                </div>
                <div class="col-xs-6">
                  <input type="text" class="form-control" placeholder="checkout">
                </div>
              </div>
            </div>
            <div class="form-group">
              <select name="" id="guests" class="form-control">
                <option value="1">1 guest</option>
                <option value="2">2 guests</option>
                <option value="3">3 guests</option>
              </select>
            </div>
            <input type="submit" class="btn btn-danger" value="Book it" style="width: 100%">
          </form>


        </div>
      </div>
    </div>

  </div>
</div>
